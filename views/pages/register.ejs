<!DOCTYPE html>
<html lang="en">

<head>
  <title>Photo caption contest - Register</title>
  <%- include('../partials/head'); %>
</head>

<body class="container">

<header>
  <%- include('../partials/header_unauthenticated'); %>
</header>

<main>
  <section class="vh-100" id="registration">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black border-0">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <!-- Title -->
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                    <%if ( typeof messages !== "undefined") {%>
                    <div class="alert alert-danger" role="alert">
                      <%= messages.error %>
                    </div>
                  <% }%>
                  <!-- Form -->
                  <form class="mx-1 mx-md-4" action="/register" method="POST">
                    <!-- Username -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-2xl me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="username">Username</label>
                        <input type="text" id="username" name="username" class="form-control" 
                               placeholder="Username" required/>
                        <%if ( typeof errorMessage !== "undefined" && errorMessage.username) {%>
                          <div class="error-message"><%= errorMessage.username %></div>
                        <% }%>
                      </div>
                    </div>
                    <!-- Email -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-2xl me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" 
                               placeholder="your_email@domain.com" required/>
                        <%if ( typeof errorMessage !== "undefined" && errorMessage.email) {%>
                          <div class="error-message"><%= errorMessage.email %></div>
                          <% }%>
                      </div>
                    </div>
                    <!-- Password -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-2xl me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                               placeholder="Your password" required />
                      </div>
                    </div>
                    <!-- Repeat Password -->
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-2xl me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="confirmPassword">Repeat password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                               placeholder="Your password" required/>
                        <%if ( typeof errorMessage !== "undefined" && errorMessage.password) {%>
                          <div class="error-message"><%= errorMessage.password %></div>
                         <% }%>
                      </div>
                    </div>
                    <!-- Terms of Service (ToS) -->
                    <%if ( typeof errorMessage !== "undefined" && errorMessage.ToS) {%>
                      <div class="form-check d-flex justify-content-center mb-1">
                        <label class="form-check-label error-message">
                          <%= errorMessage.ToS %>
                        </label>
                      </div>
                    <% }%>
                    <div class="form-check d-flex justify-content-center mb-5">
                          <input class="form-check-input me-2" type="checkbox" id="ToS" name="ToS" value="true"/>
                        <label class="form-check-label" for="ToS">
                          I agree all statements in <a href="#!">Terms of service</a>
                        </label>

                    </div>
                    <!-- Buttons -->
                    <div class="d-flex justify-content-around mx-4 mb-3 mb-lg-4">
                      <a href="/login"class="btn btn-secondary btn-lg">Log in</a>
                      <button type="submit" class="btn btn-primary btn-lg">Register</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>